/* miniprogram/pages/detail/detail.wxss */
page {
  display: flex;
  flex-direction: column;
}

.title {
  margin: 20rpx 30rpx;
  font-size: 20px;
}

.face {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.publisher-info {
  /* 两边间隙，与标题相同 */
  margin: 0 30rpx;
  display: flex;
  flex-direction: row;
}

.words {
  margin-left: 30rpx;
}

.nickname{
  font-size: 15px;
}

.normal-info{
  display: flex;
  flex-direction: row;
  margin-top: 6rpx;
}

.original{
  font-size: 10px;
  color: gray;
  border-radius: 10rpx;
  border: solid 1px;
  background: white;
  width: 70rpx;
  height: 30rpx;
  text-align: center;
}

.create-time{
  font-size: 13px;
  color: gray;
  margin-left: 30rpx;
}

.news-desc {
  margin: 25rpx 30rpx;
}

